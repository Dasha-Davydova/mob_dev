<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_data">

    <fragment
        android:id="@+id/nav_data"
        android:name="com.example.mireaproject.ui.data.DataFragment"
        android:label="Информация"
        tools:layout="@layout/fragment_data" />

    <fragment
        android:id="@+id/nav_webview"
        android:name="com.example.mireaproject.ui.webview.WebViewFragment"
        android:label="Браузер"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/nav_worker"
        android:name="com.example.mireaproject.ui.worker.WorkerFragment"
        android:label="Фоновая задача"
        tools:layout="@layout/fragment_worker" />

    <fragment
        android:id="@+id/nav_lightSensor"
        android:name="com.example.mireaproject.LightSensorFragment"
        android:label="Датчик освещённости"
        tools:layout="@layout/fragment_light_sensor" />

    <fragment
        android:id="@+id/nav_photoNote"
        android:name="com.example.mireaproject.PhotoNoteFragment"
        android:label="Фото и заметка"
        tools:layout="@layout/fragment_photo_note" />

    <fragment
        android:id="@+id/compassFragment"
        android:name="com.example.mireaproject.CompassFragment"
        android:label="Компас" />

    <fragment
        android:id="@+id/voiceNoteFragment"
        android:name="com.example.mireaproject.VoiceNoteFragment"
        android:label="Голосовые заметки" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mireaproject.ProfileFragment"
        android:label="Профиль" />

    <fragment
        android:id="@+id/fileToolsFragment"
        android:name="com.example.mireaproject.FileToolsFragment"
        android:label="Работа с файлами" />

